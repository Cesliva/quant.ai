// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id         String   @id @default(cuid())
  name       String
  client     String?      // General Contractor / Owner
  location   String?
  projectType String?     // e.g., Tilt-up, TI, Structural, Misc Steel
  estimateNumber String?  // internal estimate or bid #
  estimator  String?      // person doing estimate
  contactName  String?    // GC contact
  contactEmail String?
  contactPhone String?

  units     String?   @default("Imperial")
  shopRate  Float     @default(90)

  bidDueAt  DateTime?       // bid due date/time
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  items     Item[]
  bidEvents BidEvent[]
}

model Item {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id])

  drawing   String?
  detail    String?
  gridline  String?
  category  String?
  shape     String?
  size      String?
  lengthFt  Float?
  qty       Int?

  weightLb  Float?
  weldIn    Float?

  cutMin    Int?     @default(0)
  fitMin    Int?     @default(0)
  weldMin   Int?     @default(0)
  grindMin  Int?     @default(0)
  prepMin   Int?     @default(0)
  paintMin  Int?     @default(0)
  handleMin Int?     @default(0)
  loadMin   Int?     @default(0)

  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BidEvent {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id])
  title       String
  notes       String?
  startsAt    DateTime
  endsAt      DateTime?
  allDay      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

